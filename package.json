{
  "name": "better-copy-path-with-lines",
  "displayName": "Better Copy Path with Lines",
  "description": "Copy file paths with line numbers - Enhanced fork with faster UX and fixed line gutter support",
  "version": "0.1.4",
  "icon": "images/icon.png",
  "publisher": "MarkShawn2020",
  "license": "SEE LICENSE IN LICENSE.md",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copy path",
    "line number",
    "relative path",
    "absolute path",
    "file path",
    "clipboard",
    "code reference",
    "github",
    "collaboration",
    "productivity",
    "line range",
    "editor"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qishan233.copy.relative.path.line",
        "title": "%command.copy.relative.path.line.title%"
      },
      {
        "command": "qishan233.copy.absolute.path.line",
        "title": "%command.copy.absolute.path.line.title%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "qishan233.copy.relative.path.line",
          "group": "9_cutcopypaste@100"
        },
        {
          "command": "qishan233.copy.absolute.path.line",
          "group": "9_cutcopypaste@101"
        }
      ],
      "editor/lineNumber/context": [
        {
          "command": "qishan233.copy.relative.path.line",
          "group": "9_cutcopypaste@100"
        },
        {
          "command": "qishan233.copy.absolute.path.line",
          "group": "9_cutcopypaste@101"
        }
      ]
    },
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "copyPathWithLineNumber.selection.separator": {
          "type": "string",
          "enum": [
            "comma",
            "space",
            "semicolon"
          ],
          "default": "comma",
          "enumDescriptions": [
            "%configuration.selection.separator.description.comma%",
            "%configuration.selection.separator.description.space%",
            "%configuration.selection.separator.description.semicolon%"
          ],
          "enumItemLabels": [
            "comma",
            "space",
            "semicolon"
          ],
          "description": "%configuration.description.selection.separator%"
        },
        "copyPathWithLineNumber.range.connector": {
          "type": "string",
          "enum": [
            "dash",
            "tilde"
          ],
          "default": "dash",
          "enumDescriptions": [
            "%configuration.range.connector.description.dash%",
            "%configuration.range.connector.description.tilde%"
          ],
          "enumItemLabels": [
            "dash",
            "tilde"
          ],
          "description": "%configuration.description.range.connector%"
        },
        "copyPathWithLineNumber.path.separator": {
          "type": "string",
          "enum": [
            "system",
            "slash",
            "backslash"
          ],
          "default": "system",
          "enumDescriptions": [
            "%configuration.range.path.separator.system%",
            "%configuration.range.path.separator.slash%",
            "%configuration.range.path.separator.backslash%"
          ],
          "enumItemLabels": [
            "system",
            "slash",
            "backslash"
          ],
          "description": "%configuration.description.path.separator%"
        },
        "copyPathWithLineNumber.show.message": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.description.copied.show.message%"
        }
      }
    }
  },
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkShawn2020/copy-path-with-line-number.git"
  },
  "homepage": "https://github.com/MarkShawn2020/copy-path-with-line-number/blob/main/README.md",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "clean": "rm -rf out",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish:minor": "vsce publish minor",
    "publish:patch": "vsce publish patch"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "source-map-support": "^0.5.21"
  }
}
